        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="#50535e"-->
        <!--android:elevation="5dp"-->
        <!--/>-->
</RelativeLayout>
